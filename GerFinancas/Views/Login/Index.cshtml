@model Login
@{ 
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                    @TempData["MensagemErro"]
                </div>
            }
<h3>Login</h3>
<p>Entre com seus dados corretamente para acessar o sistema</p>

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="LoginUsuario" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.LoginUsuario)
    </div>
    <div class="mb-3">
        <label for="Senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>