@model IEnumerable<GerFinancas.Models.FormatoLancamento>

@{
    ViewData["Title"] = "Formatos de Lançamento";
}

<h1>Formatos de Lançamento</h1>

<p>
    <a asp-controller="FormatoLancamento" asp-action="Criar" class="btn btn-primary">Inserir novo formato</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-controller="FormatoLancamento" asp-action="Editar" asp-route-Codigo="@item.Codigo">Alterar</a> |
                <a asp-controller="FormatoLancamento" asp-action="Visualizar" asp-route-Codigo="@item.Codigo">Visualizar</a> |
                <a asp-controller="FormatoLancamento" asp-action="Apagar" asp-route-Codigo="@item.Codigo">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
</div>
