}

<h1>Alterar Cartão</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Cartoes" asp-action="Editar" method="post">
            <!--<input type="hidden" asp-for="Cartoes.Codigo" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cartoes.Codigo" class="control-label"></label>
                <input asp-for="Cartoes.Codigo" class="form-control" />
